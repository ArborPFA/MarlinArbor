			        </algorithm>
			        <algorithm type="PointingClusterAssociation" />
			        <algorithm type="ClusterFragmentMerging" />
			        <algorithm type="SurroundingHitsMerging">
			          <ShouldMergeIsolatedHits>true</ShouldMergeIsolatedHits>
