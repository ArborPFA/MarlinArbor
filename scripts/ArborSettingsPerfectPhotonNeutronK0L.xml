					</algorithm>
					<algorithm type="TrackClusterAssociation" instance="TopologicalTrackClusterAssociation" />
					<algorithm type="ClosebySeedMerging" />
					<algorithm type="MipFragmentMerging" />
			        <algorithm type="FragmentRemoval">
